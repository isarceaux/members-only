<h1>Login Page</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <p>
  <%= f.label :email %>
  <%= f.email_field :email %>
  </p>

  <p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </p>

  <p>
  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span>Remember me on this computer</span>
  <% end %>
  </p>

  <p>
  <%= f.submit "Log in" %>
  </p>

<% end %>
